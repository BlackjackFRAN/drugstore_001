@model drugstore_001.Usuario
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                    </td>
                    <td style="text-decoration: underline">
                        Login Drugstore
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(Model => Model.usuario1)</td>
                    <td>@Html.EditorFor(Model => Model.usuario1)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(Model => Model.usuario1)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(Model => Model.contrasenia)</td>
                    <td>@Html.EditorFor(Model => Model.contrasenia)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(Model => Model.contrasenia)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">
                            @Html.DisplayFor(Model=>Model.LoginErrorMsj)
                        </label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" name="name" value="Login" /></td>
                    <td><input type="reset" name="name" value="Clear" /></td>
                </tr>

            </table>
        }


        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </div>
</body>
</html>
